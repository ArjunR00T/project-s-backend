# .env file for API Gateway

# Ports for the microservices
USER_SERVICE_URL=http://user-service:5001/api/user
SHOP_SERVICE_URL=http://shop-service:5002/api/shop
REQUEST_SERVICE_URL=http://request-service:5003/api/request
BOOKING_SERVICE_URL=http://book-service:5004/api/booking

# JWT secret for token verification (set same as the one used to sign tokens)
JWT_SECRET=your_jwt_secret_key_here

# Optional: Rate limiter config
RATE_LIMIT_WINDOW=900000 
RATE_LIMIT_MAX=100               

# Port for API Gateway itself
PORT=5000
